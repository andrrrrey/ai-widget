+
+const ANIMALS = [
+  "панда",
+  "лисица",
+  "котёнок",
+  "енот",
+  "хомяк",
+  "дельфин",
+  "жираф",
+  "капибара",
+  "барсук",
+  "коала",
+  "выдра",
